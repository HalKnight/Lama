<!DOCTYPE html>
<div>
	{{#each articles}}
	<div class="panel panel-primary">
		{{#if ../user.local.admin}}
		<div style="float: right;">
			<button class="btn btn-danger btn-delete btn-xs"
				data-id="{{ uniqueId }}">
				<i class="fa fa-times"></i>
			</button>
		</div>
		<div style="float: right;">
			<a class="btn btn-primary btn-xs" href="/newArticle/{{ uniqueId }}">Edit</a>
		</div>
		{{/if}}
		<div class="panel-heading">
			<div>
				<em class="panel-title">{{ title }}</em>
			</div>
		</div>
		<div class="panel-body">{{{ blogbody }}}</div>
		<div class="panel-footer">
			<div class="row">
				<div class="col-md-10">
					<button class="btn btn-primary" id="btn-like"
						data-id="{{ uniqueId }}">
						<i class="fa fa-heart"> Like</i>
					</button>
					<strong class="likes-count">{{ likes }}</strong> &nbsp; - &nbsp; <i
						class="fa fa-eye"></i> <strong>{{ views }}</strong> &nbsp; -
					&nbsp; Posted: <em class="text-muted">{{ date }}</em> &nbsp; -
					&nbsp; Author: <em class="text-muted">{{ userName }}</em>
				</div>
				<a style="float: right; margin-right: 10px !important;"
					href="/articles/{{ uniqueId }}" class="btn btn-default">View</a>
			</div>
		</div>
	</div>
	{{/each}}
</div>
