<!DOCTYPE html>
<div class="panel panel-primary">
	<div class="panel-heading">
		<h3 class="panel-title">Create a new article</h3>
	</div>
	<form method="post" action="/articles">
		<input class="form-control displayNone" type="text" name="editBlogID"
			value="{{ article.articleID }}">
		<div class="panel-body form-horizontal">
			<div class="form-group col-md-12">
				<label class="col-md-2 control-label" for="title">Title:</label>
				<div class="col-md-10">
					<input class="form-control" type="text" name="title">
				</div>
			</div>
			<div class="form-group col-md-12">
				<label class="col-md-2 control-label" for="description">Description:</label>
				<div class="col-md-10">
					<input class="form-control" name="description" rows="2"></input>
				</div>
			</div>
			<div class="form-group col-md-12">
				<label class="col-sm-2 control-label btn-file" for="blogbody">Blog
					Content:</label>
				<div class="col-md-10">
					<textarea id="txtEditor" class="form-control textarea blogbody"
						name="blogbody">
					</textarea>
				</div>
			</div>
			<div class="form-group col-md-12">
				<div class="col-md-12 text-right">
					<button type="submit" id="login-btn"
						class="publishButton displayNone" type="button"></button>
					<button class="btn btn-success prePublishButton" type="button">
						<i class="fa fa-cloud-upload "></i> Publish
					</button>
				</div>
			</div>
		</div>
	</form>
	<div class="displayNone" id="editBlogBody">{{ article.blogbody }}</div>
	<div class="displayNone" id="editBlogTitle">{{{ article.title }}}</div>
	<div class="displayNone" id="editBlogDesc">{{{
		article.description }}}</div>
</div>
